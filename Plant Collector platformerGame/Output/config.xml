<?xml version="1.0"?>
<!-- Config file for the game -->
<!-- L01: DONE 1: Create configuration file-->
<config>
  <App>
    <title>Plant collector platformer</title>
    <organization>Anna Metreveli and Miguel Tama√±o</organization>
  </App>

  <renderer>
    <vsync value="false"/>
    <camera x="0" y="0" speed="3"/>
  </renderer>

  <audio>
    <soundtrack>Assets/audio/music/Day_of_the_river.ogg</soundtrack>
    <fx>Assets/audio/fx/.wav</fx>
    <volume value="128" valueFx="128" />
  </audio>

  <window>
    <resolution width="1920" height="1080" scale="2"/>
    <fullscreen value="true"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <player>
    <spritesFolder>Assets/textures/mushyPlayer.png</spritesFolder>
    <controls>Assets/textures/controls.png</controls>
    <tutorials>Assets/textures/tutorials.png</tutorials>
    <startPosition x="100" y ="950"/>
    <speed value="1"/>
    <jumps value="2"/>
  </player>

  <sceneIntro>
    <title>Assets/textures/title.png</title>
    <IntroScreen>Assets/textures/bgStart.png</IntroScreen>
    <spaceToStart>Assets/textures/space.png</spaceToStart>
    <spritesFolder>Assets/textures/mushyPlayer.png</spritesFolder>
  </sceneIntro>

  <gameOver>
    <gameOverTitle>Assets/textures/GameOver.png</gameOverTitle>
    <background>Assets/textures/1.png</background>
    <spaceToRestart>Assets/textures/restartButton.png</spaceToRestart>
    <spritesFolder>Assets/textures/mushyPlayer.png</spritesFolder>
  </gameOver>

  <WinScreen>
    <WinTitle>Assets/textures/WinTitle.png</WinTitle>
    <background>Assets/textures/2.png</background>
    <spaceToRestart>Assets/textures/restartButton.png</spaceToRestart>
    <spritesFolder>Assets/textures/mushyPlayer.png</spritesFolder>
  </WinScreen>

  <!-- L03: Added maps folder as config option -->
  <map>
    <folder>Assets/maps/</folder>
  </map>
</config>